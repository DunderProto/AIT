<h1>Reviews for {{book.title}} by {{book.author}}</h1>
<form method="POST" action='/books/{{book.slug}}/comments'>
    <input type="range" min="0" max="5" value=3 name="rating" required>
    <input type="text" name="text" required>
    <input type="submit" value="comment">
</form>

<table>
	<thead>
		<th>Rating</th>
		<th>Review</th>
	</thead>
	<tbody>
		{{#each book.reviews}}
		<tr>
			<td>{{rating}}</td>
			<td>{{text}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>